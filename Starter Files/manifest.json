{
  "manifest_version": 3,
  "name": "AZ Problem Bookmarker",
    "author": "Nishtha Aggarwal",
  "version": "0.1",
  "description": "This extension helps you bookmark problems on maang.in and open them from any website without opening maang.in manually.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://maang.in/*"],
  "content_scripts": [
    {
      "matches": ["https://maang.in/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/delete.png",
        "assets/play.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "AZ Problem Bookmarker"
  }
}
